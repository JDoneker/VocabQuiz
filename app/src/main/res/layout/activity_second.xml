<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 Salud" />

            <CheckBox
                android:id="@+id/checkBox1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.2 Creencias y valores" />

            <CheckBox
                android:id="@+id/checkBox1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.3 Subculturas" />

            <CheckBox
                android:id="@+id/checkBox1_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.4 Lengua e identidad" />

            <CheckBox
                android:id="@+id/checkBox2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.1 Actividades de ocio" />

            <CheckBox
                android:id="@+id/checkBox2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.2 Vacaciones y viajes" />

            <CheckBox
                android:id="@+id/checkBox2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.3 Historias de vida" />

            <CheckBox
                android:id="@+id/checkBox2_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.4 Hitos de la vida" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox2_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.5 Costumbres y tradiciones" />

            <CheckBox
                android:id="@+id/checkBox2_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.6 Migración" />

            <CheckBox
                android:id="@+id/checkBox3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.1 Entretenimiento" />

            <CheckBox
                android:id="@+id/checkBox3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.2 Expresiones artísticas" />

            <CheckBox
                android:id="@+id/checkBox3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.3 Comunicación y medios" />

            <CheckBox
                android:id="@+id/checkBox3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.4 Tecnología" />

            <CheckBox
                android:id="@+id/checkBox3_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.5 Innovación científica" />

            <CheckBox
                android:id="@+id/checkBox4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.1 Relaciones sociales" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.2 Comunidad" />

            <CheckBox
                android:id="@+id/checkBox4_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.3 Compromiso social" />

            <CheckBox
                android:id="@+id/checkBox4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.4 Educación" />

            <CheckBox
                android:id="@+id/checkBox4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.5 El mundo laboral" />

            <CheckBox
                android:id="@+id/checkBox5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.1 El medio ambiente" />

            <CheckBox
                android:id="@+id/checkBox5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.2 Derechos humanos" />

            <CheckBox
                android:id="@+id/checkBox5_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.3 Paz y conflicto" />

            <CheckBox
                android:id="@+id/checkBox5_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.4 Igualdad" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox5_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5 Globalización" />

            <CheckBox
                android:id="@+id/checkBox5_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.6 Ética" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>



    </LinearLayout>

    <!-- Right Column: Checkboxes -->


